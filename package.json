{
  "name": "ngcash",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start:dev": "yarn && cross-env NODE_ENV=development yarn migration:up && yarn dev",
    "test": "mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"src/tests/**/*.spec.ts\"",
    "dev": "cross-env NODE_ENV=development ts-node-dev --transpile-only --ignore-watch node_modules --respawn src/server.ts",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js -d src/data-source.ts",
    "migration:up": "yarn typeorm migration:run",
    "typeorm:migration": "ts-node-dev ./node_modules/typeorm/cli.js",
    "start": "yarn migration:up:prod && node ./dist/server.js",
    "typeorm:prod": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm -d ./dist/data-source.js",
    "migration:up:prod": "yarn typeorm:prod migration:run"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.3",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
